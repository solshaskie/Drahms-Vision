# Environment Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/drahms_vision
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Keys (Required)
GOOGLE_VISION_API_KEY=your-google-vision-api-key
EBIRD_API_KEY=your-ebird-api-key

# External API Keys (Optional)
OPENWEATHER_API_KEY=your-openweather-api-key
NASA_API_KEY=your-nasa-api-key
PLANTNET_API_KEY=your-plantnet-api-key
INATURALIST_API_KEY=your-inaturalist-api-key

# External Services Configuration
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
NASA_BASE_URL=https://api.nasa.gov
EBIRD_BASE_URL=https://api.ebird.org/v2
PLANTNET_BASE_URL=https://my-api.plantnet.org

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Production should be specific domains)
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Application Settings
APP_NAME=Drahms Vision
APP_VERSION=2.0.0
