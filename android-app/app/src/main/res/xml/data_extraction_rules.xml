<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude camera captures and temporary files from cloud backup -->
        <exclude domain="file" path="captures/"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="file" path="logs/"/>
        <exclude domain="database" path="camera_cache.db"/>
        <exclude domain="sharedpref" path="camera_settings.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include app data for device transfer -->
        <include domain="file" path="settings/"/>
        <include domain="database" path="app_database.db"/>
        <exclude domain="file" path="captures/"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="file" path="logs/"/>
    </device-transfer>
</data-extraction-rules>
